    <activity
        android:name="com.overseastechnologies.GradeApp.activities.DashboardActivity"
        android:label="DashboardActivity" />
    <activity
        android:name="com.overseastechnologies.GradeApp.activities.StatisticsActivity"
        android:label="StatisticsActivity" />
    <activity
        android:name="com.overseastechnologies.GradeApp.activities.LiveClassesActivity"
        android:label="LiveClassesActivity" />
    <activity
        android:name="com.overseastechnologies.GradeApp.activities.AssignmentsActivity"
