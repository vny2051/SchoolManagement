        android:exported="true"
        android:label="@string/app_name"
        android:theme="@style/Theme.SchoolManagement.NoActionBar">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>
    <activity
        android:name="com.overseastechnologies.GradeApp.activities.LoginActivityOtp"
        android:label="LoginActivity" />
    <activity
        android:name="com.overseastechnologies.GradeApp.MainActivity"
        android:label="MainActivity" />
<!--    navigation drawer activity-->
    <activity
        android:name="com.overseastechnologies.GradeApp.activities.ProfileActivity"
        android:exported="false" />
